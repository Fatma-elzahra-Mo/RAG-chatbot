# Arabic RAG Chatbot - Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Configuration
ENVIRONMENT=production
DEBUG=false
APP_NAME=Arabic RAG Chatbot

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# LLM Configuration
# Provider options: gemini, openai, local (future)
LLM_PROVIDER=gemini

# Gemini Configuration (recommended for Egyptian Arabic)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7

# OpenAI Configuration (alternative)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Embeddings Configuration
EMBEDDINGS_MODEL=BAAI/bge-m3
EMBEDDINGS_DIMENSION=1024
EMBEDDINGS_DEVICE=cpu
EMBEDDINGS_BATCH_SIZE=32

# Reranker Configuration
RERANKER_MODEL=Omartificial-Intelligence-Space/ARA-Reranker-V1
RERANKER_TOP_K=10
RERANKER_DEVICE=cpu

# Qdrant Configuration (Docker internal networking)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=arabic_documents
QDRANT_PREFER_GRPC=false

# Retrieval Configuration
RETRIEVAL_TOP_K=20
RETRIEVAL_SCORE_THRESHOLD=0.5
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Memory Configuration
MAX_CONVERSATION_HISTORY=10
CONVERSATION_TTL_HOURS=24
MEMORY_WINDOW_SIZE=5

# Redis Configuration (Docker internal networking)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# PostgreSQL Configuration (optional - for conversation logs)
POSTGRES_USER=chatbot
POSTGRES_PASSWORD=chatbot123
POSTGRES_DB=chatbot
POSTGRES_URL=postgresql://chatbot:chatbot123@postgres:5432/chatbot

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Arabic Text Processing
NORMALIZE_ARABIC=true
REMOVE_DIACRITICS=true
REMOVE_TATWEEL=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Security (optional - for production)
# API_KEY=your_api_key_for_securing_endpoints
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
